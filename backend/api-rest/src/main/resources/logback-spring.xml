<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <!-- Console appender with correlationId support. Pattern keeps it compact; easily switch to JSON encoder later. -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%thread] trace=%X{correlationId:-na} %logger{36} - %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Set framework noise to WARN -->
    <logger name="org.springframework" level="INFO" />
    <logger name="org.springframework.web" level="INFO" />
    <logger name="org.springframework.boot.actuate" level="INFO" />
    <logger name="reactor.netty" level="WARN" />

    <!-- Application packages -->
    <logger name="com.legistrack" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>

# LegisTrack Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/legistrack
DATABASE_USERNAME=legistrack
DATABASE_PASSWORD=your_postgres_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Ollama AI Service Configuration
OLLAMA_BASE_URL=http://localhost:11434

# External API Keys (Required for functionality)
CONGRESS_API_KEY=your_congress_api_key_here
GOVINFO_API_KEY=your_govinfo_api_key_here

# Spring Configuration
SPRING_PROFILES_ACTIVE=docker

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8080/api
